{
  "name": "Vision Eyecare",
  "description": "Reminder app for 20-20-20 eyecare",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": ["storage", "tabs", "scripting"],
  "action": {
    "default_title": "Vision",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/eye16x16.png",
      "32": "/images/eye32x32.png",
      "48": "/images/eye64x64.png",
      "128": "/images/eye128x128.png"
    }
  },
  "icons": {
    "16": "/images/eye16x16.png",
    "32": "/images/eye32x32.png",
    "48": "/images/eye64x64.png",
    "128": "/images/eye128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
